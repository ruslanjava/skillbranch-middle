<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="true"
        tools:expanded="false">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:toolbarId="@+id/toolbar"
            app:expandedTitleGravity="center_horizontal|bottom"
            app:expandedTitleMarginBottom="64dp"
            app:expandedTitleTextAppearance="@style/CollapsingTitleAppearance"
            android:title="Artos Stark">

            <ImageView
                android:id="@+id/iv_arms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/stark_icon"
                app:layout_collapseMode="parallax"
                android:fitsSystemWindows="true"
                tools:visibility="visible" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:fitsSystemWindows="false" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_words_label"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_icon_decor"
                android:drawablePadding="8dp"
                android:drawableTint="?attr/colorAccent"
                android:fontFamily="sans-serif-medium"
                android:text="@string/character_words"
                android:textColor="@color/color_gray_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv_words"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/color_gray_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/tv_words_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_words_label"
                app:layout_constraintBottom_toBottomOf="@id/tv_words_label" />

            <TextView
                android:id="@+id/tv_born_label"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_icon_decor"
                android:drawablePadding="8dp"
                android:drawableTint="?attr/colorAccent"
                android:fontFamily="sans-serif-medium"
                android:text="@string/character_born"
                android:textColor="@color/color_gray_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_words_label" />
            <TextView
                android:id="@+id/tv_born"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/color_gray_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/tv_born_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_born_label"
                app:layout_constraintBottom_toBottomOf="@id/tv_born_label" />

            <TextView
                android:id="@+id/tv_titles_label"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_icon_decor"
                android:drawablePadding="8dp"
                android:drawableTint="?attr/colorAccent"
                android:fontFamily="sans-serif-medium"
                android:text="@string/character_titles"
                android:textColor="@color/color_gray_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_born_label" />
            <TextView
                android:id="@+id/tv_titles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/color_gray_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/tv_titles_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_titles_label"
                app:layout_constraintBottom_toBottomOf="@id/tv_titles_label" />

            <TextView
                android:id="@+id/tv_aliases_label"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_icon_decor"
                android:drawablePadding="8dp"
                android:drawableTint="?attr/colorAccent"
                android:fontFamily="sans-serif-medium"
                android:text="@string/character_aliases"
                android:textColor="@color/color_gray_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_titles_label" />
            <TextView
                android:id="@+id/tv_aliases"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/color_gray_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/tv_aliases_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_aliases_label"
                app:layout_constraintBottom_toBottomOf="@id/tv_aliases_label" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_father"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                app:constraint_referenced_ids="tv_father_label,btn_father"
                app:layout_constraintTop_toBottomOf="@+id/tv_aliases_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <TextView
                android:id="@+id/tv_father_label"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_icon_decor"
                android:drawablePadding="8dp"
                android:drawableTint="?attr/colorAccent"
                android:fontFamily="sans-serif-medium"
                android:text="@string/character_father"
                android:textColor="@color/color_gray_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_aliases_label" />
            <Button
                android:id="@+id/btn_father"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/color_gray_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/tv_father_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_father_label"
                app:layout_constraintBottom_toBottomOf="@id/tv_father_label" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="btn_father,tv_father_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="149dp" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_mother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                app:constraint_referenced_ids="tv_mother_label,btn_mother"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrier" />
            <TextView
                android:id="@+id/tv_mother_label"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_icon_decor"
                android:drawablePadding="8dp"
                android:drawableTint="?attr/colorAccent"
                android:fontFamily="sans-serif-medium"
                android:text="@string/character_mother"
                android:textColor="@color/color_gray_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_father_label" />
            <Button
                android:id="@+id/btn_mother"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/color_gray_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/tv_mother_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_mother_label"
                app:layout_constraintBottom_toBottomOf="@id/tv_mother_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>